<html >
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>

    <% include partials/scripts_and_css.ejs %>
    <script src="/assets/js/dashboard.js"></script>       
    <style>
        body{
            background:linear-gradient(lightblue , blueviolet) no-repeat fixed ;
        } 
        h1{
            font-size:500% ;
            font-family: georgia, 'times new roman', times, serif;
            text-align: center ; 
            padding:10px 0 ;
        }
    </style>

</head>


<body>
    <% if(locals.login && login){%>
    <% include partials/navbar.ejs %>
    <%}else{%>
    <%include partials/navbar_login.ejs%>
    <%} %>

    <h1 class="animated flipInX ">Notify Them </h1>
    <div class="jumbotron container">
        <% if(locals.messageSent && messageSent){ %>
            <div class="alert alert-success text-center" id="alertMessageSent">
                <h4 class="animated zoomIn slow">Notification Sent successfully ! </h4>
            </div>
        <% } %>
        <h3 id="collegename"></h3>
        <div id="location-details">
        </div>
        <form method="post" action="/sendnotification">
            <label style="display:block">Choose to the Topic to which the message needs to be sent : </label>
            <div class="form-group" id="topicslist">
                
            </div>
            <div class="form-group">
                <div class="form-group-inline">
                    <label class="col-1">Title : </label>
                    <input class="col-6" type="text" maxlength="30" minlength="3" name="title" required placeholder="keep it precise :)"/>
                </div>
                <br>
                <label style="display:block;" >Description : </label>          
                <textarea name="description"  placeholder="Eg : All students need to register for the semester before 10th of this month ! " cols="100" rows="4" name="message"></textarea>
            </div>

            <div class="form-group">
                
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Notify</button>
            </div>
        </form>

    </div>

   
    <br><br><br><br><br>
    <% include partials/footer.ejs %>
</body>
</html>