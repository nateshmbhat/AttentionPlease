           })
               $("#email").val(userinfo.email) ;
               $("#name").val(userinfo.name) ;
               $('#biodata').html(userinfo.biodata) ;
               $('h3#college').html('COLLEGE : jammu'+userinfo.college);
               $('h3#state').html('STATE'+userinfo.state);
               $('h3#district').html('DISTRICT'+userinfo.district) ;
           }) ;
       })
   })



