        <script>
        function addRow()
        {
            let row = `<tr>
            <td>
                <div class="row">
                    <div class="col">
                        <input type="text" placeholder="Start time" class="timepicker inline startTime">
                    </div>
                    <div class="col">
                        <input type="text" placeholder="End time" class="timepicker inline endTime">
                    </div>
                </div>
            </td>
           
            `
            for(i =0 ; i < 7 ; i++)
            {
                row+= `<td><input type="text" id="class" class="md-form form-control text-center font-weight-bold"></td>`
            }

            row+=`</tr>` ; 

            $("#timetable_body").html(row) ; 
            $(".timepicker").pickatime({})
        }


            function initialize() {
                $('#input_starttime').pickatime({
                    'twelvehour': 'true'
                });
            }

            initialize();

            $("#btn_addTimeTable").on('click', event => {
                $("#addNewTimeTable").fadeIn().removeAttr("hidden").fadeIn();
            })

            $("#btn_addRow").on('click' , e=>{
                addRow() ; 
